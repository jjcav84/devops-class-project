<div id="recruiterForm">
	<h2>Sign up as a recruiter</h2>
	<%= form_for @recruiter do |form| %>
		<fieldset class="form-group form-row">
			<legend>Basic Info</legend>
				<div class="col">
				<%= form.label :name %><br>
				<%= form.text_field :name, class: "form-control" %><br>
			  </div>
			  <div class="col">
				<%= form.label :email %><br>
				<%= form.email_field :email, class: "form-control" %><br>
			  </div>
	  </fieldset>
	  <fieldset class="form-group form-row">
	  	<legend>Company Info</legend>
		  	<div class="col">
				  <%= form.label :company %><br>
				  <%= form.text_field :company, class: "form-control" %><br>
			  </div>
			  <div class="col">
			    <%= form.label :website %><br>
			    <%= form.text_field :website, class: "form-control" %><br>
			  </div>
	  </fieldset>
	  <fieldset class="form-group form-row">
	  	<legend>Personal Info</legend>
				<div class="col">
				  <%= form.label :linkedin %><br>
				  <%= form.text_field :linkedin, class: "form-control" %><br>
			  </div>
			  <div class="col">
				  <%= form.label :bio %><br>
				  <%= form.text_area :bio, class: "form-control" %><br>
			  </div>
		</fieldset>
		 	<%= form.hidden_field :user_id, value: current_user.id %>
		  <%= submit_tag "Submit Profile", class: "btn btn-success" %><br>
	 </div>
</div>
<% end %>



